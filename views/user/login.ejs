<% layout('./layouts/boilerPlate.ejs') -%>

<div class="row mt-2 mb-2">
    <div class="col-6 offset-3">
        <h2>Login for Wanderlust</h2>
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="username" class="form-control title" name="username" required> 
                <!-- <div class="valid-feedback">username Looks good!</div> -->
                <div class="invalid-feedback">username required!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input placeholder="password" type="password" class="form-control title" name="password" required> 
                <!-- <div class="valid-feedback">password Looks good!</div> -->
                <div class="invalid-feedback">password required!</div>
            </div>
            <button class="btn btn-outline-primary">Login</button>
        </form>
    </div>
</div>